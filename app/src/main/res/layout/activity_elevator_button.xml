<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvMain">

        <RelativeLayout
            android:id="@+id/extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:text="ON-OFF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Example App"
                android:layout_below="@+id/button1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView2"
                android:text="BlueTooth Address" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/numbers"
            android:layout_below="@+id/extra"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Please click button."
                    android:textSize="27sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="82dp"
                android:background="@drawable/custom_button_border"
                android:text="1"
                android:textSize="50dp" />


            <Button
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="82dp"
                android:layout_toRightOf="@id/one"
                android:background="@drawable/custom_button_border"
                android:text="2"
                android:textSize="50dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_button_border"
                android:text="3"
                android:layout_below="@+id/one"
                android:textSize="50dp" />

            <Button
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/three"
                android:background="@drawable/custom_button_border"
                android:text="4"
                android:layout_below="@+id/two"
                android:textSize="50dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_button_border"
                android:text="5"
                android:layout_below="@+id/three"
                android:textSize="50dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/five"
                android:background="@drawable/custom_button_border"
                android:text="6"
                android:layout_below="@+id/four"
                android:textSize="50dp" />

            <Button
                android:id="@+id/seven"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_button_border"
                android:text="7"
                android:layout_below="@+id/five"
                android:textSize="50dp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/seven"
                android:background="@drawable/custom_button_border"
                android:text="8"
                android:layout_below="@+id/six"
                android:textSize="50dp" />


            <Button
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_button_border"
                android:text="9"
                android:layout_below="@+id/seven"
                android:textSize="50dp" />

            <Button
                android:id="@+id/ten"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/nine"
                android:background="@drawable/custom_button_border"
                android:text="10"
                android:layout_below="@+id/eight"
                android:textSize="50dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/misc"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/numbers">

            <ImageView
                android:id="@+id/down"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_toRightOf="@id/up"
                android:background="@drawable/custom_button_border"
                app:srcCompat="@drawable/down" />

            <ImageView
                android:id="@+id/up"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:background="@drawable/custom_button_border"
                app:srcCompat="@drawable/up" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/open"
                android:layout_below="@id/down"
                android:background="@drawable/custom_button_border"
                android:padding="10dp"
                app:srcCompat="@drawable/close" />

            <ImageView
                android:id="@+id/open"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:layout_below="@id/up"
                android:background="@drawable/custom_button_border"
                android:padding="10dp"
                app:srcCompat="@drawable/open" />

            <ImageView
                android:id="@+id/emergency"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/open"
                android:background="@drawable/custom_button_border"
                android:padding="10dp"
                app:srcCompat="@drawable/emergency" />

        </RelativeLayout>
    </RelativeLayout>


</ScrollView>